<script>
// فتح/إغلاق القوائم
function toggle(id){
  const el=document.getElementById(id);
  el.style.display = (el.style.display==='block') ? 'none' : 'block';
}
document.addEventListener('click',(e)=>{
  if(!e.target.classList.contains('btnx')){
    ['projectsMenu','contactMenu'].forEach(id=>{
      const el=document.getElementById(id); if(el) el.style.display='none';
    });
  }
});

// بحث داخلي (Google site:)
function siteSearch(){
  const q=document.getElementById('q').value.trim();
  const host=location.host;
  const url=`https://www.google.com/search?q=site:${host}+${encodeURIComponent(q)}`;
  window.open(url,'_blank');
}

// تبديل اتجاه/لغة بسيط (إن حبيت)
function toggleLang(){
  const html=document.documentElement;
  const isAr=html.lang==='ar';
  html.lang=isAr?'en':'ar';
  html.dir=isAr?'ltr':'rtl';
}

// الصفحات المعروفة (حدّث القائمة إذا أضفت ملفات جديدة)
const PAGES = [
  {path:'index.html', title:'الصفحة الرئيسية'},
  {path:'sokhna.html', title:'العين السخنة'},
  {path:'zafarana.html', title:'مشاريع طريق الزعفرانة'},
  {path:'suez.html', title:'مشاريع طريق السويس'},
  {path:'north.html', title:'الساحل الشمالي'},
  {path:'Cairo.html', title:'القاهرة الجديدة'},
  {path:'Resale.html', title:'طلب ريسيل'}
];

// اقتراح روابط + محاولة تصحيح المسار تلقائيًا
(function(){
  // اقترحات أساسية
  const sug=document.getElementById('suggest');
  PAGES.forEach(p=>{
    const a=document.createElement('a');
    a.href = p.path;
    a.innerHTML = `<span>${p.title}</span><span class="badge">${p.path}</span>`;
    sug.appendChild(a);
  });

  // إصلاح بسيط لروابط قديمة: أقرب مسار بالـ Levenshtein
  const current = location.pathname.replace(/^\//,'').toLowerCase();
  if(!current) return;

  const dist = (a,b)=>{
    const m=[], al=a.length, bl=b.length;
    for(let i=0;i<=al;i++){ m[i]=[i]; }
    for(let j=0;j<=bl;j++){ m[0][j]=j; }
    for(let i=1;i<=al;i++){
      for(let j=1;j<=bl;j++){
        m[i][j]=Math.min(
          m[i-1][j]+1,
          m[i][j-1]+1,
          m[i-1][j-1]+(a[i-1]===b[j-1]?0:1)
        );
      }
    }
    return m[al][bl];
  };

  let best=null, bestD=1e9;
  PAGES.forEach(p=>{
    const d=dist(current, p.path.toLowerCase());
    if(d<bestD){best=p; bestD=d;}
  });

  // لو الفرق صغير (<=4) غالبًا هو المطلوب → نعيد التوجيه
  if(best && bestD<=4){
    const msg=document.getElementById('autoMsg');
    msg.textContent = `يبدو أنك تقصد: ${best.title} — سيتم تحويلك خلال ثانيتين…`;
    setTimeout(()=>{ location.href = `/${best.path}`; }, 2000);
  }
})();
</script>
